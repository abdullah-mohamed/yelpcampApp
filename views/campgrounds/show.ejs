<% include ../partials/header %>

	<div class="container" style="margin: 25px auto; width: 75%;">
		<div class="row">
			<div class="col-lg-3">
				<h4 style="padding-bottom: 10px;">YELP CAMP</h4>
				<ul class="list-group">
					<li class="list-group-item active">Category 1</li>
					<li class="list-group-item">Category 2</li>
					<li class="list-group-item">Category 3</li>
				</ul>
				<span class= "map">
				</span>
			</div>
			<div class="img-thumbnail col-lg-9" style="padding: 0px;">
				<img src="<%= camp[0].image %>" style="width:100%;">
				<div class="container" style="margin-top: 10px;">
					<div class="caption" style="font-size: 21px;">
						<span style="color: #18f; margin-right: 65%;"><%= camp[0].name %></span>
						<span style="color: #18f;"> $9.00/night</span>
					</div>
					<div class="caption">
						<div style="font-size: 13px; margin-bottom: 10px;"> <em>Submitted by <%= camp[0].creator.username %></em></div>
						<div style="font-size: 13px; margin-bottom: 10px;"><%= camp[0].description %></div>
					</div>
					<% if(camp[0].creator.id == currentUser.id){ %>
						<a class="btn btn-warning" href="/campgrounds/<%= camp[0]._id %>/edit">Edit</a>
						<form action="/campgrounds/<%= camp[0]._id %>?_method=DELETE" method="POST" style="margin-bottom: 10px; display: inline;">
							<a class="btn btn-danger"><input type="submit" value="Delete" style="color: white; background-color: red; border: none;"></a>
						</form>
					<%}%>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-3">
			</div>
			<div class ="container col-lg-9" style="border: 1px solid lightgray; border-radius: 5px; margin-top: 10px; background-color: #d6d5ca">
				<button class="btn btn-success" style="margin-top: 10px; margin-left: 600px;"><a href="/campgrounds/<%= camp[0]._id %>/comments/new" style="text-decoration: none; color: white;">leave a review</a></button>
				<div class="caption">
					<h4 style="font-size: 15px;">
						<% camp[0].comments.forEach(function(comment){ %>
							<span> /review/ </span>
							<%= comment.author.username %>	<span class='pull-right'> /date/ </span>
							<p><%= comment.text %></p>
						<% }); %>
					</h4>
				</div>
			</div>
		</div>
	</div>


<% include ../partials/footer %>