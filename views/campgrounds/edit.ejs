<% include ../partials/header%>

<div class="container">
	<h1 class="text-center">Edit <%= camp[0].name %> campground</h1>
	<div style=" width: 30%; margin:25px auto;">
		<form action='/campgrounds/<%= camp[0]._id %>?_method=PUT' method='POST'>
			<div class="form-group">
				<input class="form-control" type='text' name='camp[name]' placeholder='camp name' style="border:none;" value="<%= camp[0].name %>">
			</div>
			<div class="form-group">
				<input class="form-control" type='text' name='camp[image]' placeholder='camp image url' style="border:none;" value="<%= camp[0].image %>">
			</div>
			<div class="form-group">
				<input class="form-control" type='text' name='camp[description]' placeholder='camp description' style="border:none;" value="<%= camp[0].description%>">
			</div>
			<button type="submit" class="btn btn-primary btn-block">Submit</button>
		</form>
		<a href="/campgrounds">GO BACK</a>
	</div>
</div>

<% include ../partials/footer%>
